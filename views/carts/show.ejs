<%- include('../partials/header') %> 

<h2>Shopping Cart: <%= user.name %> </h2>
<% cart.cart.forEach(c =>{%>
    <li><%= c %> </li>
<% }) %>  
<h1>Break</h1>
<%= cart %> 
<table>
    <thead>
      <tr>
        <th>Item</th>
        <th>Price</th>
        <th></th> 
      </tr>
    </thead>
    <tbody>
         <% cart.cart.forEach(c =>{ %>  
          <tr>
          <td> <%= c.itemId.itemName %>  </td>
          <td>$<%= c.itemId.price %> </td>
          <td><form action="/carts/<%= c.itemId._id %>?_method=DELETE" method="POST"><button class="btn btn-danger btn-sm" type="submit">x</button></form></td>
          </tr>
         <% }) %> 
    </tbody>
  </table>

<%- include('../partials/footer') %> 