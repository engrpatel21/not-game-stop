<%- include('../partials/header') %>
    <h1><%= seller.name %>'s Profile </h1>
    <h2>Selling:</h2>
    <% items.forEach(i =>{ %>
        <% if(i.seller._id.equals(seller._id)) {%>
          <h4><a href="/items/<%= i._id %>"><%= i.itemName %></a></h4> 
        <% } %>  
      <% }) %> 
      <h2>Seller Reviews:</h2>
     <% reviews.forEach(r =>{ %>
        <% if(r.createdFor._id.equals(seller._id)) %>
        <h4><%= r.review %> by <%= r.createdBy.name %> </h4> 
     <% }) %>  
      <div class="form-container">
      <form method="POST" action="/users/<%= seller._id %> ">
        <div class="form-group">
          
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Write a review about this seller:</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="review"></textarea>
        </div>
        <button class="btn btn-primary" type="submit">Post Review</button>
      </form>
    </div>
<%- include('../partials/footer') %>  