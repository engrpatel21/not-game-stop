<%- include('../partials/header') %> 

<h3>
  Name: <%= user.name %> 
</h3>

<% if(user.isSeller) {%>
  <h2>Items for Sale:</h2>
  <% items.forEach(i =>{ %>
    <% if(i.seller._id.equals(user._id)) {%>
      <h4><a href="/items/<%= i._id %> "><%= i.itemName %></a></h4> 
    <% } %>  
  <% }) %> 
  <h3>Seller Reviews:</h3> 
  <% reviews.forEach(r => {%>
    <h4><%= r.review %> by <%= r.createdBy.name %> </h4>
  <% }) %>  
<% } %>  


<%- include('../partials/footer') %> 