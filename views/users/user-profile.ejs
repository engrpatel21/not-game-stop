<%- include('../partials/header') %> 
<h3> <%= user.name %> </h3>
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" href="/users">Profile</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/users/reviews">Reviews</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Sales Dasboard</a>
  </li>
</ul>
<% let count = 0 
 items.forEach(i =>{ 
    if(i.seller._id.equals(user._id)) {
        count++
     } 
 })%>  
<div class="row mb-4">
    <div class="container">
        <div class="col-lg-11 .parentContainer">
            <div class="card mt-4">
                <div class="card" >
                    <div class="row no-gutters">
                        <div class="col-lg-5">
                            <img class="card-img" src="<%= user.avatar %> " style="height: 100%" alt="Suresh Dasari Card">
                        </div>
                        <div class="col-lg-7">
                            <div class="card-body">
                            <h5 class="card-title"></h5>
                            <p class="card-text"> <ul class="list-group list-group-flush">
                            <li class="list-group-item">Name: <%= user.name %> </li>
                            <li class="list-group-item"><%= user.isSeller ? 'Selling ' + count + ' Items': '' %> </li>
                            <li class="list-group-item">Bio: <%= user.bio %> </li>
                            <li class="list-group-item">   
                                <form method="POST" action="/users/<%= user._id %>/bio?_method=PUT">
                                <div class="form-group">
                                  </div>
                          
                                <div class="form-group">
                                  <label for="exampleFormControlTextarea1">Update Bio: 
                                  </label>
                                  <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="bio"></textarea>
                                </div>
                                <button class="btn btn-primary" type="submit">Upate</button>
                              </form></li>
                            </ul></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<%- include('../partials/footer') %>